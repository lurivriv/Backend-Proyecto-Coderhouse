<div class="app-content container">
    <h1 class="title-category">DATOS DE USUARIOS</h1>
    <div class="btn-container">
        <button type="button" class="btn-delete-inactive-users">Eliminar todos los usuarios inactivos</button>
    </div>
    {{#if users.length}}
        <div>
            <div class="item-list">
                {{#each users}}
                    <div class="card-list">
                        <div class="card">
                            {{#if avatar}}
                                <img class="card-img-top" src="/assets/users/img/{{this.avatar}}" alt="Foto de perfil de {{this.full_name}}">
                            {{/if}}
                            <div class="card-body d-block">
                                <p class="text-card-list user-info-card-list"><b>Nombre y apellido:</b><br>{{this.full_name}}</p>
                                <p class="text-card-list user-info-card-list"><b>Id:</b><br>{{this._id}}</p>
                                <p class="text-card-list user-info-card-list"><b>Email:</b><br>{{this.email}}</p>
                                {{#if github_username}}
                                    <p class="text-card-list user-info-card-list"><b>Usuario de GitHub:</b><br>{{this.github_username}}</p>
                                {{else}}
                                    <p class="text-card-list user-info-card-list"><b>Usuario de GitHub:</b><br>No sincronizado</p>
                                {{/if}}
                                <p class="text-card-list user-info-card-list"><b>Edad:</b><br>{{this.age}}</p>
                                <p class="text-card-list user-info-card-list"><b>Rol:</b><br>{{this.role}}</p>
                                <p class="text-card-list user-info-card-list"><b>Id del carrito:</b><br>{{this.cart}}</p>
                                <p class="text-card-list user-info-card-list"><b>Estado de documentos:</b><br>{{this.status}}</p>
                                <p class="text-card-list user-info-card-list"><b>Última conexión:</b><br>{{this.last_connection}}</p>
                            </div>
                            <div class="btn-container">
                                <button type="button" class="btn-modify-rol" data-user-id="{{this._id}}" data-user-full-name="{{this.full_name}}" data-user-role="{{this.role}}" data-user-status="{{this.status}}">Modificar rol</button>
                            </div>
                            <div class="btn-container">
                                <button type="button" class="btn-delete-user" data-user-id="{{this._id}}" data-user-full-name="{{this.full_name}}">Eliminar usuario</button>
                            </div>
                        </div>
                    </div>
                {{/each}}
            </div>
        </div>
    {{else}}
        <h2 class="title-category">No hay usuarios :(</h2>
    {{/if}}
</div>

<script type="module" src="/js/usersInfo.js"></script>