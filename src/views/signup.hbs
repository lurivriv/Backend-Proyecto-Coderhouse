<div class="app-content container">
    <h1 class="title-category">REGISTRARSE</h1>
    {{#if error}}
        <div class="error-session">
            <p class="mb-sm-3 mb-0">{{error}}</p>
        </div>
    {{/if}}
    <div class="form-container">
        <form method="post" action="/api/sessions/signup" enctype="multipart/form-data">
            <div class="mb-lg-3 mb-0">
                <label for="avatar" class="form-label">Foto de perfil</label>
                <input type="file" name="avatar" id="avatar" class="form-control">
            </div>
            <div class="mb-lg-3 mb-0">
                <label for="first_name" class="form-label">Nombre</label>
                <input type="text" name="first_name" placeholder="Nombre" id="first_name" class="form-control">
            </div>
            <div class="mb-lg-3 mb-0">
                <label for="last_name" class="form-label">Apellido</label>
                <input type="text" name="last_name" placeholder="Apellido" id="last_name" class="form-control">
            </div>
            <div class="mb-lg-3 mb-0">
                <label for="age" class="form-label">Edad</label>
                <input type="number" name="age" placeholder="00" id="age" class="form-control">
            </div>
            <div class="mb-lg-3 mb-0">
                <label for="email" class="form-label">Email</label>
                <input type="email" name="email" placeholder="nombre@example.com" id="email" class="form-control">
            </div>
            <div class="mb-lg-3 mb-0">
                <label for="password" class="form-label">Contraseña</label>
                <input type="password" name="password" placeholder="contraseña123" id="password" class="form-control">
            </div>
            <div class="btn-signup-container">
                <button type="submit" class="btn-signup">Registrarse</button>
            </div>
        </form>
    </div>
    <div class="btn-login-signup-container">
        <button type="button" class="btn-signup-gh" onclick="window.location.href = '/api/sessions/signup-github'">Registrarse con GitHub</button>
    </div>
    <div class="btn-login-signup-container">
        <button type="button" class="btn-login-signup" onclick="window.location.href = '/login'">Iniciar sesión</button>
    </div>
</div>